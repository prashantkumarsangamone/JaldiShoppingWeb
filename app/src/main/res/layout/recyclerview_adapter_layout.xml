<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:layout_margin="15dp"

    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/relative_layout_border"


        >
    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="icon"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_marginRight="5dp"
        android:src="@drawable/hypercity"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:padding="5dp"
        android:textColor="@color/body"
        android:layout_alignParentLeft="true"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_icon" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textStyle="bold"
        android:layout_below="@+id/title"
        android:textColor="@color/body"
        android:layout_alignLeft="@+id/item_icon"
        android:layout_alignStart="@+id/item_icon"
        android:layout_toLeftOf="@+id/distance"
        android:layout_toStartOf="@+id/distance" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/body"
        android:textStyle="bold"
        android:id="@+id/distance"
        android:layout_alignBaseline="@+id/address"
        android:layout_alignBottom="@+id/address"
        android:layout_alignRight="@+id/item_icon"
        android:layout_alignEnd="@+id/item_icon" />
</RelativeLayout>

</RelativeLayout>