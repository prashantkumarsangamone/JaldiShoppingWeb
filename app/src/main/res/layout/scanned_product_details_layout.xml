<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrolldown"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:paddingTop="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_width="fill_parent"
            android:layout_height="200dp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/viewpager"

            android:padding="10dip" />

            <TextView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:padding="5dp"

                android:gravity="center"
                android:layout_below="@+id/indicator"
                android:textStyle="bold"
                android:text="Ahold Cocoa Almonds-Ahold"/>

            <TextView
                android:id="@+id/timecode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_below="@+id/items"
                android:textColor="@android:color/darker_gray"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="ItemCode:10038" />

            <TextView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_below="@+id/timecode"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="*****(50)" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_below="@+id/rate"
                android:textColor="@android:color/black"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="$19" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:id="@+id/linear"

            android:weightSum="3"
            android:orientation="horizontal" >

                <Button
                    android:id="@+id/increment"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/body"
                    android:padding="14dp"

                    android:layout_marginLeft="110dp"
                    android:gravity="center"
                    android:background="@drawable/button_border_layout"
                    android:textStyle="bold"
                    android:text="-"
                    android:layout_weight="0.25" />

            <TextView
                android:text="1"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:layout_width="60dp"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                android:layout_gravity="center"
                android:layout_weight="0.11" />

            <Button
                android:text="+"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_border_layout"
                android:textColor="@color/body"
                android:padding="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            app:fabSize="mini"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/linear"
            app:backgroundTint="@android:color/white"
            android:layout_gravity="bottom|end"

            app:srcCompat="@drawable/shopping_cart_icon"
            android:id="@+id/floatingActionButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/floatingActionButton"
            android:textColor="@color/body"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/cardview_shadow_start_color"
            android:text="IN-STORE LOCATION"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store"
            android:id="@+id/linear1"
            android:padding="10dp"
            android:weightSum="3"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/aisle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/body"
                android:padding="5dp"
                android:layout_weight="1"
                android:gravity="center"

                android:text="AISLE 13" />

            <TextView
                android:text="BAY 8"
                android:background="@android:color/white"

                android:layout_width="60dp"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/body"

                android:layout_height="wrap_content"
                android:id="@+id/bay"

                android:layout_weight="1"/>

            <Button
                android:text="VIEW STORE MAP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/button_border_layout"
                android:textColor="@color/body"
                android:padding="5dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/linear1"
            android:textColor="@color/body"
            android:padding="5dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="MORE PRODUCT INFO"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product"
            android:id="@+id/linear3"

            android:orientation="horizontal" >


            <TextView
                android:id="@+id/textarea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/body"
                android:gravity="center"
                android:padding="5dp"
                android:maxLines="8"
                android:text="Easy to dispense and use of this product." />

        </LinearLayout>
        <TextView
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_below="@+id/linear3"
            android:textColor="@color/body"
            android:padding="5dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="REVIEWS"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review"
            android:id="@+id/linear4"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/reviewtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/body"
                android:padding="5dp"
                android:gravity="center"
                android:text="4.2 OUT OF 5" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/wishlist_grey"
            android:layout_above="@+id/store"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="41dp"
            android:tag="1"
            android:scaleType="centerInside"
            android:layout_marginStart="41dp"
            android:id="@+id/imageView9" />


    </RelativeLayout>
    </ScrollView>

</LinearLayout>