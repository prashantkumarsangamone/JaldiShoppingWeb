<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:text="Quantity: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/body"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/offer"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/noimage"
        android:id="@+id/imageView6"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/body"
        android:textStyle="bold"
        android:id="@+id/textView21"
        android:padding="5dp"
        android:layout_below="@+id/offer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <TextView
        android:text="Quantity: "
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21" android:textColor="@color/body"
        android:textStyle="bold"
        android:padding="5dp"

        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:id="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:background="@drawable/button_border"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/button5"
        android:layout_below="@+id/editText4"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:text="Lotto Slipper"
        android:textColor="@color/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="5dp"
        android:maxLines="3"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="Price:$19"

        android:layout_width="wrap_content"
        android:textColor="@color/body"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:padding="5dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/offer"
        android:layout_alignStart="@+id/offer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/body"

        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView21" />

    <Button
        android:text="CheckOut"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toRightOf="@+id/offer"
        android:layout_toEndOf="@+id/offer" />

</RelativeLayout>